<?xml version='1.0' encoding='utf-8' ?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="eu.heliopora.look4.tracking.entities">
    <class name="Resource" table="RESOURCE">        
    	<id name="id" column="ID" type="string" length="24">
      		<generator class="assigned"/>
    	</id>
		<version name="version" column="VERSION" unsaved-value="null" type="integer"/>
      	<property name="creationTime" column="CREATION_TIME" type="timestamp"/>
    	<property name="modificationTime" column="MODIFICATION_TIME" type="timestamp"/>
    	<property name="deleted" column="DELETED" type="yes_no" not-null="true"/>
		<many-to-one name="trackingDetail" class="eu.heliopora.look4.tracking.entities.TrackingDetail" column="TRACKING_DETAIL_ID" lazy="false" cascade=""/>      	   	 	   	    
		<many-to-one name="businessDetail" class="eu.heliopora.look4.tracking.entities.BusinessDetail" column="BUSINESS_DETAIL_ID" lazy="false" cascade=""/>      	   	 	   	    
    </class>
</hibernate-mapping>